{
  "name": "toncounter",
  "version": "1.0.0",
  "description": "Job Interview Test",
  "main": "server.ts",
  "scripts": {
    "dev": "serverless offline start --stage dev",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && cross-env CI=true npm run test --bail",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bteodosio/TonCounter.git"
  },
  "author": "Bruno Teodosio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bteodosio/TonCounter/issues"
  },
  "homepage": "https://github.com/bteodosio/TonCounter#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/aws-lambda": "^8.10.73",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^26.0.22",
    "@types/log4js": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "aws-sdk": "^2.880.0",
    "commitizen": "^4.2.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^6.9.0",
    "serverless-webpack": "^5.4.0",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-jest": "0.0.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.2.3",
    "webpack": "^4.29.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "countapi-js": "^1.0.2",
    "dotenv": "^8.2.0",
    "log4js": "^6.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
